{
  "defaultSeverity": "error",
  "extends": [
    "tslint:latest",
    "tslint:recommended",
    "tslint-react",
    "tslint-config-airbnb",
    "tslint-config-prettier"
  ],
  "jsRules": {},
  "rules": {
    "interface-name": false,
    "semicolon": [true, "never"],
    "member-access": [false],
    "ordered-imports": [true],
    "no-console": [false],
    "no-var-requires": true
  },
  "rulesDirectory": [],
  "include": ["src"],
  "exclude": [
    ".cache",
    "node_modules",
    "dist",
    "public",
    "scripts",
    "tmp",
    "config/**/*.js",
    "coverage/lcov-report/*.js"
  ]
}
